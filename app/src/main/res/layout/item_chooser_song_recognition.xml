<android.support.constraint.LinearConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="horizontal"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearConstraintLayout">


    <ImageView
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/linearConstraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/linearConstraintLayout"
        app:layout_constraintBottom_toBottomOf="@+id/linearConstraintLayout"/>

    <TextView
        android:text="TextView"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toRightOf="@+id/imageView3"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/linearConstraintLayout"
        app:layout_constraintBottom_toBottomOf="@+id/linearConstraintLayout"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="94dp"
        android:layout_height="32dp"
        android:id="@+id/checkBox2"
        app:layout_constraintTop_toTopOf="@+id/linearConstraintLayout"
        app:layout_constraintRight_toRightOf="@+id/linearConstraintLayout"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearConstraintLayout"/>
</android.support.constraint.LinearConstraintLayout>